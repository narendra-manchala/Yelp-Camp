<% include ../partials/header%>
<div id="container">
    <h1 style="text-align: center">Enter a new campground</h1>
    <div id="new-camp">
        <form action="/campgrounds" method="post" >
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" placeholder="name">
        </div>
        <div class="form-group">
            <label for="image">Image url</label>
            <input class="form-control" type="text" id="image" name="image" placeholder="image link">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control"></textarea>
            <!--<input class="form-control" type="text" id="description" name="description" placeholder="Scribe your thoughts about the ground ...">-->
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Submit</button>
        </div>
        </form>
        <a href="/campgrounds"><button class="btn btn-danger btn-block">Cancel</button></a>
    </div>
</div>

<% include ../partials/footer%>